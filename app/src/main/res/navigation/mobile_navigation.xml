<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="id.kotlin.tugasminggu03.ui.home.BatikFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_slideshow2"
            app:destination="@id/nav_slideshow" />
        <action
            android:id="@+id/action_nav_home_to_regionsFragment2"
            app:destination="@id/regionsFragment" />
        <action
            android:id="@+id/action_nav_home_to_nav_gallery2"
            app:destination="@id/nav_gallery" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="id.kotlin.tugasminggu03.ui.covid.CovidFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_batik"/>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="id.kotlin.tugasminggu03.ui.museum.MuseumFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_covid"/>
    <fragment
        android:id="@+id/regionsFragment"
        android:name="id.kotlin.tugasminggu03.ui.regions.RegionsFragment"
        android:label="Regions"
        tools:layout="@layout/fragment_regions"/>
</navigation>